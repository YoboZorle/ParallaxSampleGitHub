<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/ParallaxPopupMenu</item>
        <item name="android:actionBarStyle">@style/ParallaxActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ParallaxActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/transparent_black</item>
    </style>

    <style name="ParallaxPopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/transparent_black</item>
    </style>
</resources>
